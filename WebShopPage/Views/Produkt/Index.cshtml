@model IEnumerable<WebShopPage.Model.Produkt>

@{
    ViewBag.Title = "Produkter";
}

<h1 class="text-muted text-center">BananaStore</h1>
@if (!ViewBag.Innlogget)
{<p class="text-center text-muted">Registrer deg eller logg inn for å kjøpe bananer</p>}
<hr />
</table>
<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-xs-4">
                <div class="row col-sm-6 col-sm-offset-3">
                    <img class="img-circle img-responsive" src="~/Img/warhol.png" />
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="text-center text-info">@Html.DisplayFor(modelItem => item.navn)</h4>
                        <p class="text-muted">@Html.DisplayFor(modelItem => item.beskrivelse)</p>
                        <div class="row">
                            <div class="col-sm-6">
                                <h4 class="text-right pull-right">@Html.DisplayFor(modelItem => item.pris)</h4>
                            </div>
                            <div class="col-sm-6">
                                @if (ViewBag.Innlogget)
                                {
                                    <p><a class="btn btn-default pull-left" href="@Url.Action("LeggiKurv", "Kurv", new { id = item.produktId }, "")" role="button">Legg i kurv</a></p>
                                }

                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
    </div>

