<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FruitStore</title>
    @Styles.Render("~/Content/font-awesome.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar text-primary"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="text-muted navbar-brand">@Html.ActionLink("bananaStore", "Index", "Produkt", new { area = "" }, new { @class = "" })</div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--<li>@Html.ActionLink("Produkter", "Index", "Produkt")</li>  -->              
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                @if (Session["Admin"] != null && (bool)Session["Admin"] )
                {
                    @Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "text-info" })  
                }
                @RenderBody()
            </div>
    </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FruitStore ASp.net</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
